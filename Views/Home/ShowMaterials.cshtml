@model List<EDUFA1.DataModel.UploadedFile>
@{
    ViewBag.Title = "ShowMaterials";
}
@using (Html.BeginForm("Materials", "Home", FormMethod.Post, new { enctype = "multipart/form-data", style = "padding: 10%;padding-top: 0;", id = "Materials" }))
{
    @Html.ValidationSummary(true)
    <form>
        <div class="d-flex" id="wrapper" style="font-size: large; font-style: italic;">
            <div id="main" class="container-fluid">
                <div class="formBox">
                    <h1>Materials</h1>
                    <div class="row">
                        <table class="table table-hover" style="margin-left:1%;">
                            <thead>
                                <tr>
                                    <th>SlNo</th>
                                    <th>Uploaded By</th>
                                    <th>Subject</th>
                                    <th>Remark</th>
                                    <th>File Name</th>
                                    <th>View File</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ 
                                    int i = 1;
                                }
                                    @foreach (var val in @Model)
                                    {
                                        <tr>
                                            <td>@i</td>
                                            <td>@val.UploadedBy</td>
                                            <td>@val.File_Subject</td>
                                            <td>@val.Remark</td>
                                            <td>@val.FilePath</td>
                                            <td><a href="/Content/UploadedFiles/@val.FilePath" target="_blank">View</a></td>
                                        </tr>
                                            i++;
                                    }
                            </tbody>
                        </table>
                    </div>
                    </div>
                </div>
            </div>
        </form>
}

